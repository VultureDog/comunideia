<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.messages.each do |id, msg| %>
      <li>* <%= msg.first %></li>
    <% end %>
    </ul>
  </div>
<% end %>