<% for i in 0 ... @recompenses.count %>

  <% if (@recompenses[i].quantity.to_i > 0) || (@recompenses[i].quantity.to_i < 0) %>
    <% pledge_value = @recompenses[i].financial_value %>
    <section class="pledge-item <%= ["full", ""][rand(2)] %>" data-pledge-value="<%= pledge_value %>" data-idx="<%= i %>" ng-class="{current: selectedPledgeItem == <%= i %>}" onclick="set_recompense_id(<%= @recompenses[i].id %>)">
      <header class="header">
        <h2 class="name"><%= @recompenses[i].title %> </h2>

        <% if (@recompenses[i].quantity.to_i > 0)%>
          <span class="donation-value">R$ <%= pledge_value %></span>
        <% end %>
        <span class="pledged-indicator"><%= @recompenses[i].investments.count %>
        <% if (@recompenses[i].quantity.to_i > 0)%>
          /<%= @recompenses[i].quantity.to_i %>
        <% end %>
         apoiadores</span>
      </header>
      <div class="body">
        <%= @recompenses[i].summary %>
      </div>
      <% if (@recompenses[i].quantity.to_i > 0)%>
        <footer class="footer">
          Estimativa de Entrega: <%= Idea::MONTHS_MES[@recompenses[i].date_delivery.month][0] %>/<%= @recompenses[i].date_delivery.year %>
        </footer>
      <% end %>
    </section>
  <% end %>
<% end %>