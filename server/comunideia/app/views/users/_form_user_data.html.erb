<%= object.text_field :cpf, placeholder: User::CPF %>

<%= object.label 'Data de nascimento:' %>
<%= object.select :birthday_day, options_for_select(Idea::DAYS_DIA, :selected => @user.birth_date.nil? ? 0 : @user.birth_date.day) %>
<%= object.label '/' %>
<%= object.select :birthday_month, options_for_select(Idea::MONTHS_MES, :selected => @user.birth_date.nil? ? 0 : Idea::MONTHS_MES[@user.birth_date.month]) %>
<%= object.label '/' %>
<% current_year = Date.today.strftime('%Y').to_i %>
<%= object.select :birthday_year, options_for_select(Idea::YEARS_ANO, :selected => @user.birth_date.nil? ? 0 : @user.birth_date.year) %>

<br><br>

<%= object.text_field :address, placeholder: User::ADDRESS %>

<%= object.text_field :address_num, placeholder: User::ADDRESS_NUMBER %>

<%= object.text_field :complement, placeholder: User::ADDRESS_COMPLEMENT %>
<br><br>

<%= object.text_field :district, placeholder: User::ADDRESS_NEIGHBORHOOD %>

<%= object.text_field :city, placeholder: User::ADDRESS_CITY %>

<%= object.select :region, options_for_select(User::BRA_STATES_LIST, :selected => object.object.region) %>
<br><br>

<%= object.hidden_field :country, value: User::COUNTRY_BRA %>

<%= object.text_field :cep, placeholder: User::ADDRESS_CEP %>
<br><br>

<%= object.text_field :cell_phone, placeholder: User::CELLPHONE %>

<%= object.text_field :phone, placeholder: User::ADDRESS_PHONE %>
