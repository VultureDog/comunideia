<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <% if !@user.facebook_association %>
    <%= f.check_box :facebook_association, id:"facebook_association_check_box" , onclick:"show_facebook_login_confirmation()" %>
    <%= f.label User::FACEBOOK_ASSOCIATION %>
    <br><br>
  <% end %>

  <% if !@user.google_plus_association %>
    <%= f.check_box :google_plus_association, id:"google_association_check_box" , onclick:"show_google_plus_login_confirmation()" %>
    <%= f.label User::GOOGLE_PLUS_ASSOCIATION %>
    <br><br>
  <% end %>

  <%= f.label User::NAME %><br>
  <%= f.text_field :name, placeholder: User::NAME %>
  <br><br>

  <%= f.label "#{User::EMAIL}*" %><br>
  <%= f.text_field :email, placeholder: User::EMAIL %>
  <br><br>

  <%= f.label "#{User::EMAIL_CONFIRMATION}*" %><br>
  <%= f.text_field :email_confirmation, placeholder: User::EMAIL %>
  <br><br>

  <%= f.label "#{User::PASSWORD}*" %><br>
  <%= f.password_field :password %>
  <br><br>

  <%= f.label "#{User::PASSWORD_CONFIRMATION}*" %><br>
  <%= f.password_field :password_confirmation %>
  <br><br><br><br>

  <%= f.text_field :cpf, placeholder: User::CPF %>

  <%= f.text_field :birth_date, placeholder: User::BIRTH_DATE %>
  <br><br>

  <%= f.text_field :address, placeholder: User::ADDRESS %>

  <%= f.text_field :address_num, placeholder: User::ADDRESS_NUMBER %>

  <%= f.text_field :complement, placeholder: User::ADDRESS_COMPLEMENT %>
  <br><br>

  <%= f.text_field :district, placeholder: User::ADDRESS_NEIGHBORHOOD %>

  <%= f.text_field :city, placeholder: User::ADDRESS_CITY %>

  <%= f.text_field :region, placeholder: User::ADDRESS_STATE %>
  <br><br>

  <%= f.text_field :cep, placeholder: User::ADDRESS_CEP %>
  <br><br>

  <%= f.text_field :cell_phone, placeholder: User::ADDRESS_CELLPHONE %>

  <%= f.text_field :phone, placeholder: User::ADDRESS_PHONE %>
  <br><br>

  <%= f.check_box :notifications %>
  <%= f.label User::NOTIFICATIONS_AND_UPDATES %>
  <br><br>
  
  <%= f.submit User::SAVE_STRING %>
<% end %>
