<%= render 'shared/error_messages' %>

<%= form_for(@user) do |f| %>

  <%= f.label "Nome" %><br>
  <%= f.text_field :name %>
  <br><br>

  <%= f.label "E-mail*" %><br>
  <%= f.text_field :email %>
  <br><br>

  <%= f.label "E-mail: confirmação*" %><br>
  <%= f.text_field :email_confirmation %>
  <br><br>

  <%= f.label "Senha*" %><br>
  <%= f.password_field :password %>
  <br><br>

  <%= f.label "Senha: confirmação*" %><br>
  <%= f.password_field :password_confirmation %>
  <br><br><br><br>

  <%= f.label "CPF" %>
  <%= f.text_field :cpf %>

  <%= f.label "Data de nascimento" %>
  <%= f.text_field :birth_date %>
  <br><br>

  <%= f.label "Endereço" %>
  <%= f.text_field :address %>

  <%= f.label ", num" %>
  <%= f.text_field :address_num %>

  <%= f.label "complemento" %>
  <%= f.text_field :complement %>
  <br><br>

  <%= f.label "Bairro" %>
  <%= f.text_field :district %>

  <%= f.label "Cidade" %>
  <%= f.text_field :city %>

  <%= f.label "Estado" %>
  <%= f.text_field :region %>
  <br><br>

  <%= f.label "CEP" %>
  <%= f.text_field :cep %>
  <br><br>

  <%= f.label "Celular" %>
  <%= f.text_field :cell_phone %>

  <%= f.label "Telefone" %>
  <%= f.text_field :phone %>
  <br><br>

  <%= f.check_box :notifications %>
  <%= f.label "Gostaria de receber notificações e atualizações?" %>
  <br><br>

  <%= f.submit "Salvar" %>
<% end %>
