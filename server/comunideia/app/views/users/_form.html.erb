<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label "Nome" %><br>
  <%= f.text_field :name, placeholder: "Nome" %>
  <br><br>

  <%= f.label "E-mail*" %><br>
  <%= f.text_field :email, placeholder: "E-mail" %>
  <br><br>

  <%= f.label "E-mail: confirmação*" %><br>
  <%= f.text_field :email_confirmation, placeholder: "E-mail" %>
  <br><br>

  <%= f.label "Senha*" %><br>
  <%= f.password_field :password %>
  <br><br>

  <%= f.label "Senha: confirmação*" %><br>
  <%= f.password_field :password_confirmation %>
  <br><br><br><br>

  <%= f.text_field :cpf, placeholder: "CPF" %>

  <%= f.text_field :birth_date, placeholder: "Data de nascimento" %>
  <br><br>

  <%= f.text_field :address, placeholder: "Endereço" %>

  <%= f.text_field :address_num, placeholder: "número" %>

  <%= f.text_field :complement, placeholder: "complemento" %>
  <br><br>

  <%= f.text_field :district, placeholder: "Bairro" %>

  <%= f.text_field :city, placeholder: "Cidade" %>

  <%= f.text_field :region, placeholder: "Estado" %>
  <br><br>

  <%= f.text_field :cep, placeholder: "CEP" %>
  <br><br>

  <%= f.text_field :cell_phone, placeholder: "Celular" %>

  <%= f.text_field :phone, placeholder: "Telefone fixo" %>
  <br><br>

  <%= f.check_box :notifications %>
  <%= f.label "Gostaria de receber notificações e atualizações?" %>
  <br><br>

  <%= f.submit "Salvar" %>
<% end %>
