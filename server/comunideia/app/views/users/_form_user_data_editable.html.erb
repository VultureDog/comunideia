<span class="user-info-block user-header"><%= User::BASIC_DATA %></span>

<div class="user-info-block with-border-bottom width-95">
  <div class="user-info-blocks-row">
    <span class="user-info-block user-field-title"><%= User::NAME %> completo</span>
    <%= object.text_field :name, type:"text", class: "text-input" %>
  </div>

  <div class="user-info-blocks-row">
    <span class="user-info-block user-field-title"><%= "#{User::EMAIL}*" %></span>
    <%= object.text_field :email %>
  </div>

  <div class="user-info-blocks-row">
    <span class="user-info-block user-field-title"><%= User::CPF %></span>
    <%= object.text_field :cpf, placeholder: User::CPF %>
  </div>

  <div class="user-info-blocks-row">
    <span class="user-info-block user-field-title"><%= object.label 'Data de nascimento:' %></span>
    <%= object.select :birthday_day, options_for_select(Idea::DAYS_DIA, :selected => @user.birth_date.nil? ? 0 : @user.birth_date.day) %>
    <%= object.label '/' %>
    <%= object.select :birthday_month, options_for_select(Idea::MONTHS_MES, :selected => @user.birth_date.nil? ? 0 : Idea::MONTHS_MES[@user.birth_date.month]) %>
    <%= object.label '/' %>
    <% current_year = Date.today.strftime('%Y').to_i %>
    <%= object.select :birthday_year, options_for_select(Idea::YEARS_ANO, :selected => @user.birth_date.nil? ? 0 : @user.birth_date.year) %>
  </div>
</div>

<span class="user-info-block user-header"><%= User::CONTACT_STRING %></span>
<div class="user-info-block with-border-bottom width-95">
  <div class="user-info-blocks-row">
    <span class="user-info-block user-field-title"><%= User::CELLPHONE %></span>
