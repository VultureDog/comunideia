  </div>

  <div class="user-info-blocks-row">
    <span class="user-info-block user-field-title"><%= User::ADDRESS_PHONE %></span>
    <%= object.text_field :phone, placeholder: User::ADDRESS_PHONE %>
  </div>

  <div class="user-info-blocks-row">
    <span class="user-info-block user-field-title">facebook.com/</span>
    usuarioFB
    <%#= object.text_field :complement, placeholder: User::ADDRESS_COMPLEMENT %>
  </div>
  
  <div class="user-info-blocks-row">
    <span class="user-info-block user-field-title">twitter.com/</span>
    usuarioTw
    <%#= object.text_field :complement, placeholder: User::ADDRESS_COMPLEMENT %>
  </div>
</div>

