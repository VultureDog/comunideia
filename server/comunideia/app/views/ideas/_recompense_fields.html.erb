<div class="fields">
  <p>
    <%= (f.index.to_i + 1).to_s %><br>
    <% if f.index == 0 %>
      <%= f.text_area :title, value: f.object.title, disabled: true %><br>
      <%= f.text_area :summary, value: f.object.summary, disabled: true %><br>
      <%= f.hidden_field :title, value: f.object.title %>
      <%= f.hidden_field :summary, value: f.object.summary %>
      <%= f.hidden_field :quantity, value: f.object.quantity %>
      <%= f.hidden_field :financial_value, value: f.object.financial_value %>
      <%= f.hidden_field :date_delivery, value: f.object.date_delivery %>
      <br>
    <% else %>
      <%= f.text_area :title, placeholder: Recompense::TITLE %><br>
      <%= f.text_area :summary, placeholder: Recompense::SUMMARY %><br>
      <%= f.text_field :quantity, placeholder: Recompense::QUANTITY %><br>
      <%= f.text_field :financial_value, placeholder: Recompense::FINANCIAL_VALUE %><br>
      <%= f.date_field :date_delivery, value: Date.today + 40 %><br>

      <br>
      <p onclick="decrementRecompenseCounter()"><%= link_to_remove_fields Recompense::RECOMPENSE_REMOVE, f %></p>

    <% end %>
  </p>
</div>