<section id="new-proj-page" ng-controller="allProjectsCtrl">
  <% if f.object.financial_value.nil? %>
    <header class="header wrapper">
      <div class="image-wrapper">
        <img src="/assets/new-proj-header-2.jpg" alt="" class="image">
      </div>
    </header>
  <% end  %>
  <div class="body wrapper">
    <section class="new-proj-form">
      <div class="form-part">
        <h2 class="heading">Qual a localidade (cidade/estado) em que sua ideia/projeto vai iniciar?</h2>
        <%= f.text_field :local, placeholder: Idea::PLACE, class: "form-control small" %>
      </div>

      <div class="form-part">
        <h2 class="heading">Uau, que legal!<br>Agora... que tipo de ajuda vocÃª quer?</h2>
        <div id="help-type-list">

          <div class="help-item" id="help-item_1">
            <div class="checkxborder">
              <%= f.check_box :consulting_project, checked: false, class: "css-checkbox", id: "checkbox_1",  onclick: "set_checkbox_classes('help-item_1');" %>

              <%= f.label Idea::CONSULTING_PROJECT_STRING, class: "css-label lite-red-check", for: "checkbox_1" %>
            </div>
          </div>

          <div class="help-item" id="help-item_2">
            <div class="checkxborder">
              <%= f.check_box :consulting_creativity, checked: false, class: "css-checkbox", id: "checkbox_2",  onclick: "set_checkbox_classes('help-item_2');" %>

              <%= f.label Idea::CONSULTING_CREATIVITY_STRING, class: "css-label lite-red-check", for: "checkbox_2" %>
            </div>
          </div>

          <div class="help-item" id="help-item_3">
            <div class="checkxborder">
              <%= f.check_box :consulting_financial_structure, checked: false, class: "css-checkbox", id: "checkbox_3",  onclick: "set_checkbox_classes('help-item_3');" %>

              <%= f.label Idea::CONSULTING_FINANCIAL_STRUCTURE_STRING, class: "css-label lite-red-check", for: "checkbox_3" %>
            </div>
          </div>

          <div class="help-item ckx-control-item" id="help-item_4">
            <div class="checkxborder">
              <%= f.check_box :consulting_specific_checkbox, checked: false, class: "css-checkbox", id: "checkbox_4",  onclick: "set_checkbox_classes('help-item_4');" %>

              <%= f.label Idea::CONSULTING_SPECIFIC_STRING, class: "css-label lite-red-check", for: "checkbox_4" %>

              <%= f.text_area :consulting_specific, cols: "30", rows: "2", class: "form-control", id: "consulting_specific_text" %>

            </div>
          </div>

        </div>
      </div>
      
    <%= render 'ideas/idea_steps/page_midias_upload', :f => f %>

    </section>

  </div>
</section>
